<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Switch
        android:id="@+id/id_switch2"
        android:layout_width="124dp"
        android:layout_height="29dp"
        android:layout_marginBottom="24dp"
        android:text="2"
        app:layout_constraintBottom_toTopOf="@+id/id_switch3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <Switch
        android:id="@+id/id_switch3"
        android:layout_width="124dp"
        android:layout_height="29dp"
        android:layout_marginBottom="32dp"
        android:text="3"
        app:layout_constraintBottom_toTopOf="@+id/id_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />

    <Switch
        android:id="@+id/id_switch1"
        android:layout_width="124dp"
        android:layout_height="29dp"
        android:layout_marginBottom="28dp"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@+id/id_switch2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/id_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:text="Color"
        app:layout_constraintBottom_toTopOf="@+id/id_verifyEnter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/id_verifyEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginBottom="52dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Email"
        app:layout_constraintBottom_toTopOf="@+id/id_databaseEnter"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/id_verifyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="56dp"
        android:text="verify"
        app:layout_constraintBottom_toTopOf="@+id/id_databaseButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/id_verifyEnter" />

    <TextView
        android:id="@+id/id_verifyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Verified"
        app:layout_constraintBottom_toTopOf="@+id/id_databaseEnter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.372"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_verifyEnter" />

    <EditText
        android:id="@+id/id_databaseEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Email"
        app:layout_constraintBottom_toTopOf="@+id/id_databaseTextView"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/id_databaseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:text="Check"
        app:layout_constraintBottom_toTopOf="@+id/id_databaseTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toEndOf="@+id/id_databaseEnter" />

    <TextView
        android:id="@+id/id_databaseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:text="Not in Database"
        app:layout_constraintBottom_toTopOf="@+id/id_textSizeChanger"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.372"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/id_textSizeChanger"
        android:layout_width="359dp"
        android:layout_height="28dp"
        android:layout_marginBottom="20dp"
        android:text="Text Size"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/id_seekBarSizeEditor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <SeekBar
        android:id="@+id/id_seekBarSizeEditor"
        android:layout_width="338dp"
        android:layout_height="18dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>