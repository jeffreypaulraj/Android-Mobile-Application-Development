<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <SeekBar
        android:id="@+id/id_seekBarButtonWidth"
        android:layout_width="362dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/id_testButton"
        tools:layout_editor_absoluteX="25dp" />

    <Button
        android:id="@+id/id_testButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="304dp"
        android:text="Test Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/id_colorEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Display Color"
        app:layout_constraintBottom_toTopOf="@+id/id_testButton"
        tools:layout_editor_absoluteX="25dp" />

    <TextView
        android:id="@+id/id_colorTextView"
        android:layout_width="112dp"
        android:layout_height="43dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="52dp"
        android:text="colorTextView"
        app:layout_constraintBottom_toTopOf="@+id/id_testButton"
        app:layout_constraintEnd_toEndOf="parent" />

    <Switch
        android:id="@+id/id_toggleSeekBarSwitch"
        android:layout_width="158dp"
        android:layout_height="43dp"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:layout_marginBottom="144dp"
        android:text="Slider Control"
        app:layout_constraintBottom_toTopOf="@+id/id_testButton"
        app:layout_constraintStart_toEndOf="@+id/id_sliderStatusText" />

    <TextView
        android:id="@+id/id_sliderStatusText"
        android:layout_width="105dp"
        android:layout_height="28dp"
        android:layout_marginBottom="144dp"
        android:text="Turn Off Slider"
        app:layout_constraintBottom_toTopOf="@+id/id_testButton"
        tools:layout_editor_absoluteX="54dp" />
</androidx.constraintlayout.widget.ConstraintLayout>