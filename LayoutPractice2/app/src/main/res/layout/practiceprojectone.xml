<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/id_button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Button 3" />

    <Button
        android:id="@+id/id_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/id_button3"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="90dp"
        android:layout_toStartOf="@+id/id_button3"
        android:layout_toLeftOf="@+id/id_button3"
        android:text="Button 1" />

    <Button
        android:id="@+id/id_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/id_button3"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="90dp"
        android:layout_toEndOf="@+id/id_button3"
        android:layout_toRightOf="@+id/id_button3"
        android:text="Button 2" />

    <Button
        android:id="@+id/id_button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_button3"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_toStartOf="@+id/id_button3"
        android:layout_toLeftOf="@+id/id_button3"
        android:text="Button 4" />

    <Button
        android:id="@+id/id_button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_button3"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="90dp"
        android:layout_toEndOf="@+id/id_button3"
        android:layout_toRightOf="@+id/id_button3"
        android:text="Button 5" />

    <TextView
        android:id="@+id/id_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/id_button1"
        android:layout_marginEnd="-42dp"
        android:layout_marginRight="-42dp"
        android:layout_marginBottom="12dp"
        android:layout_toStartOf="@+id/id_button1"
        android:layout_toLeftOf="@+id/id_button1"
        android:text="ON" />

    <TextView
        android:id="@+id/id_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/id_button2"
        android:layout_marginStart="-24dp"
        android:layout_marginLeft="-24dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@+id/id_button2"
        android:layout_toRightOf="@+id/id_button2"
        android:text="OFF" />

    <TextView
        android:id="@+id/id_textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_button3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="-55dp"
        android:layout_marginRight="-55dp"
        android:layout_toStartOf="@+id/id_button3"
        android:layout_toLeftOf="@+id/id_button3"
        android:text="OFF" />

    <TextView
        android:id="@+id/id_textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_button4"
        android:layout_alignEnd="@+id/id_button4"
        android:layout_alignRight="@+id/id_button4"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:text="OFF" />

    <TextView
        android:id="@+id/id_textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_button5"
        android:layout_marginStart="-27dp"
        android:layout_marginLeft="-27dp"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@+id/id_button5"
        android:layout_toRightOf="@+id/id_button5"
        android:text="OFF" />
</RelativeLayout>
